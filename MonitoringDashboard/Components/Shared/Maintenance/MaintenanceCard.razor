@using MonitoringDashboard.Data.Models
@using MonitoringDashboard.Helpers

<div class="relative w-full bg-neutral-800 p-6 rounded border border-zinc-700/60 shadow-lg">
    <!-- Header -->
    <div class="flex justify-between items-start flex-wrap gap-y-2">
        <div>
            <div class="flex items-center gap-3 flex-wrap">
                <h2 class="text-xl font-semibold text-white">@Maintenance.Title</h2>
                <span class=@($"px-2 py-0.5 rounded text-sm font-semibold border {GetStatusBadgeClass(Maintenance.Status)}")>
                    @Maintenance.Status.ToPascalCaseString()
                </span>
            </div>
            @if (!string.IsNullOrWhiteSpace(Maintenance.Description))
            {
                <p class="text-zinc-400 mt-1 max-w-prose">@Maintenance.Description</p>
            }
        </div>

        <span class=@($"flex items-center gap-1 px-2 py-1 rounded border font-medium {GetSeverityClass(Maintenance.Severity)}")>
            <Icon Path="icons/triangle-exclamation.svg" class="w-4 h-4" />
            @Maintenance.Severity.ToPascalCaseString()
        </span>
    </div>

    <hr class="my-3 border-zinc-700" />

    <!-- Times -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-2 text-sm text-zinc-400">
        <div><strong>Start:</strong> @Maintenance.StartTime.ToLocalTime()</div>
        <div><strong>End:</strong> @Maintenance.EndTime.ToLocalTime()</div>
        <div><strong>Duration:</strong> @((Maintenance.EndTime - Maintenance.StartTime).ToReadableString())</div>
    </div>

    @if (Maintenance.MonitoredServices.Any())
    {
        <div class="mt-3 flex flex-col gap-2">
            <strong class="text-zinc-300">Affected Services</strong>
            <div class="flex flex-wrap items-center gap-2 text-sm">
                @foreach (var service in Maintenance.MonitoredServices)
                {
                    <span class="px-2 py-1 bg-zinc-700/60 text-zinc-100 rounded text-xs font-medium">
                        @service.Name
                    </span>
                }
            </div>
        </div>
    }
    
    <div>
        @ChildContent
    </div>
</div>

@code {
    [Parameter, EditorRequired] public Maintenance Maintenance { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    
    private string GetStatusBadgeClass(MaintenanceStatus status) => status switch
    {
        MaintenanceStatus.InProgress => "bg-red-600/20 text-red-400 border-red-500/40",
        MaintenanceStatus.Scheduled => "bg-blue-600/20 text-blue-400 border-blue-500/40",
        _ => "bg-zinc-700 text-zinc-300"
    };

    private string GetSeverityClass(MaintenanceSeverity severity) => severity switch
    {
        MaintenanceSeverity.Minor => "text-green-400 border-green-600/40 bg-green-600/10",
        MaintenanceSeverity.Major => "text-yellow-400 border-yellow-600/40 bg-yellow-600/10",
        MaintenanceSeverity.Critical => "text-red-400 border-red-600/40 bg-red-600/10",
        _ => "text-zinc-400 border-zinc-600/40 bg-zinc-700/10"
    };
}

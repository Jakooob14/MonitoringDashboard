@page "/dashboard/maintenance"
@using MonitoringDashboard.Components.Shared.Maintenance
@layout DashboardLayout
@inject IServiceScopeFactory ScopeFactory
@inject NavigationManager Nav


<div class="flex justify-between items-end mb-6">
    <h2 class="text-2xl">Scheduled Maintenance</h2>
    <NavLink class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded" Href="/dashboard/maintenance/add">
        Add Maintenance
    </NavLink>
</div>

<div class="grid gap-4">
    @if (_maintenances.Count == 0)
    {
        <span class="text-zinc-400">No maintenance events found.</span>
    }
    else
    {
        @foreach (var maintenance in _maintenances)
        {
            <MaintenanceCard Maintenance="maintenance" />
        }
    }
</div>